{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types/"
    ]
  },
  "typedocOptions": {
    "entryPoints": [
      "main.ts",
    ],
  },
  "include": [
    "*.ts",
  ]
}